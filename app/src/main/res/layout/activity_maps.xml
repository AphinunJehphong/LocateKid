<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall20">

    <TextView
        android:text="ติดตามบุตรหลาน"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textColor="@color/text" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/linTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cpe.spu.locatekid.MapsActivity"
        android:layout_margin="20dp"
        android:layout_above="@+id/button3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linTop"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="วันที่"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:layout_gravity="right"
            android:textColor="@color/text"
            android:textSize="@dimen/headline2"
            android:paddingTop="15dp" />

        <TextView
            android:text="เวลาการเดินทาง"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text"
            android:textSize="@dimen/headline2" />

        <TextView
            android:text="นักเรียนยังไม่ได้ทำการขึ้นรถ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textSize="@dimen/headline2"
            android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textSize="@dimen/headline2"
            android:textColor="@color/text"
            android:text="นักเรียนยังไม่ทำการลงรถ" />

        <TextView
            android:text="สถานะการขึ้นรถ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:textSize="@dimen/headline2"
            android:layout_gravity="right"
            android:textColor="@color/text" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView9"

                android:background="@drawable/statnull"
                android:layout_marginRight="45dp"
                android:layout_marginEnd="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>